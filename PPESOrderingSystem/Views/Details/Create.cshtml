@model Details

@{
    ViewData["Title"] = "Write an article";
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/ckeditor/ckeditor.js"></script>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<div class="card" style="padding:10px 50px 50px 50px">

    <h3>Write your Article Here</h3>

    <div>
        <form asp-controller="Details" asp-action="Create">
            @Html.AntiForgeryToken()
            
            <input asp-for="ID" type="number" />
            <div ass="col-md-10">
                <textarea style="border-color:grey;" asp-for="Title" id="ArticleTitle" name="ArticleTitle" cols="70" placeholder="Add Title"></textarea>
            </div>
            <div ass="col-md-10">
                <textarea asp-for="Body" id="Description" class="ckeditor" name="Description" rows="200"></textarea>
            </div>
            <div style="padding-top:10px">
                <button class="btn btn-outline-primary" type="submit" value="submit">Submit</button>
            </div>
        </form>
    </div>
</div>
<style>
    body {
        background-color: #eee;
        font-family: "Poppins", sans-serif;
        font-weight: 300
    }
</style>


<script>
    $(document).ready(function () {
        CKEDITOR.replace('#Description');
    });
</script>