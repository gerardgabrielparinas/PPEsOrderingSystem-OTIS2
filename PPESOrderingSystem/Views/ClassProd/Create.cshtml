@model PPEsOrderingSystem.Models.ClassProducts

@{
    ViewData["Title"] = "Create";
}

<h1 class="fa fa-th-list"> Add Products</h1>

<li class="fa-li fa fa-flag-checkered">New Item</li>
<hr />
<div class="row">
    <div class="col-md-4"
         style="background-color:gainsboro">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="fa fa-send form-group ">
                <input type="submit" value=" Create" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<a class="tn btn-sm btn-info fa fa-backward" asp-action="Index">
    Back to Product List</>
</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
