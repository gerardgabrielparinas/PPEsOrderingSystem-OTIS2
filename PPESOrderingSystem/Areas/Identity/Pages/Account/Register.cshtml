@page
@model RegisterModel

@{
    Layout = "_Layout2";
    ViewData["Title"] = "Register";
    var roles = (List<IdentityRole>)ViewData["roles"];
}


<body style="margin-top:25px; background-color:darkmagenta">
    <h1 align="center">Register</h1>
    <div align="center">
        <div class="col-md-4">
            <section>
                <img src="~/lib/pinkscribble.png" class="pinkscribble" style="top:10px; left:250px; width:1000px; height:auto" />
            </section>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" name="registerForm" onsubmit="return validateForm()">
                <h4>Create a new account.</h4>
                <hr />
                <div class="form-group" style="padding-bottom:20px">
                    <div style="float:left; padding-right:10px; padding-bottom:20px" class="col-md-6">
                        <input asp-for="Input.FirstName" placeholder="First Name" class="form-control" />
                        <span asp-validation-for="Input.FirstName" class="text-danger" style="font-size: 8px"></span>
                    </div>
                    <div style="float:right;  padding-left:10px; padding-bottom:20px" class="col-md-6">
                        <input asp-for="Input.LastName" placeholder="Last Name" class="form-control" />
                        <span asp-validation-for="Input.LastName" class="text-danger" style="font-size: 8px"></span>
                    </div>
                </div>
                <div class="form-group" style="padding-bottom:20px">
                    <div style="float:left; padding-right:10px; padding-bottom:20px" class="col-md-6">
                        <input asp-for="Input.Password" placeholder="Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger" style="font-size: 8px"></span>
                    </div>
                    <div style="float:right;  padding-left:10px; padding-bottom:20px" class="col-md-6">
                        <input asp-for="Input.ConfirmPassword" placeholder="Confirm Password" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger" style="font-size: 8px"></span>
                    </div>
                </div>
                <div style="padding-bottom:20px" class="form-group">
                    <label asp-for="Input.UserRole"></label>
                    <select asp-for="Input.UserRole" class="form-control" asp-items='new SelectList(roles,"Id","Name")'>
                    </select>
                    <span asp-validation-for="Input.UserRole" class="text-danger"></span>
                </div>
                <div style="padding-bottom:20px" class="form-group">
                    <input asp-for="Input.MobileNumber" placeholder="Mobile Number" class="form-control" />
                    <span asp-validation-for="Input.MobileNumber" class="text-danger" style="font-size: 8px"></span>
                </div>
                <div style="padding-bottom:20px" class="form-group">
                    <input asp-for="Input.Email" placeholder="Email Address" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger" style="font-size: 8px"></span>
                </div>
                <div class="form-group" style="padding-bottom:20px">
                    <div style="float:left; padding-right:10px; padding-bottom:20px" class="col-md-6">
                        <input asp-for="Input.Region" placeholder="Region" class="form-control" />
                        <span asp-validation-for="Input.Region" class="text-danger" style="font-size: 8px"></span>
                    </div>
                    <div style="float:right;  padding-left:10px; padding-bottom:20px" class="col-md-6">
                        <input asp-for="Input.Province" placeholder="Province" class="form-control" />
                        <span asp-validation-for="Input.Province" class="text-danger" style="font-size: 8px"></span>
                    </div>
                </div>
                <div class="form-group" style="padding-bottom:20px">
                    <div style="float:left; padding-right:10px; padding-bottom:20px" class="col-md-6">
                        <input asp-for="Input.City" placeholder="City" class="form-control" />
                        <span asp-validation-for="Input.City" class="text-danger" style="font-size: 8px"></span>
                    </div>
                    <div style="float:right;  padding-left:10px; padding-bottom:20px" class="col-md-6">
                        <input asp-for="Input.PostalCode" placeholder="Postal Code" class="form-control" />
                        <span asp-validation-for="Input.PostalCode" class="text-danger" style="font-size: 8px"></span>
                    </div>
                </div>
                <div style="padding-bottom:20px" class="form-group">
                    <input asp-for="Input.Barangay" placeholder="Barangay" class="form-control" />
                    <span asp-validation-for="Input.Barangay" class="text-danger" style="font-size: 8px"></span>
                </div>
                <span style="width: 25vw; display:inline-block;">
                    <button type="submit" class="btn btn-primary" style="width:150px; margin-right: 40px;">Register</button>
                    <a asp-controller="Home" asp-action="Index" button type="submit" class="btn btn-primary" style="width:150px; margin-left: 10px;">Back</a>
                </span>
            </form>
        </div>
    </div>
</body>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
